{
  "compilerOptions": {
    "moduleResolution": "node",
    "noResolve": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "outDir": "public/assets",
    "lib": [
      "es2015",
      "es2017",
      "dom",
      "es5",
      "es6",
      "es7"
    ],
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "~actions/*": [
        "src/actions/*"
      ],
      "~components/*": [
        "src/components/*"
      ],
      "~sagas/*": [
        "src/sagas/*"
      ],
      "~services/*": [
        "src/services/*"
      ],
      "~models/*": [
        "src/models/*"
      ],
      "~reducers/*": [
        "src/reducers/*"
      ],
      "~util/*": [
        "src/util/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
      "reportFiles": [
          "./src/**/*"
      ]
  },
  "exclude": [
    "./node_modules/**/*"
  ],
  "plugins": ["~typescript-eslint/eslint-plugin"]
}
